<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.TransparentStatusBar" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowSplashScreenBackground">@color/darkBackground</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splashlogo</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>


    </style>

    <style name="AppTheme.Light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>


</resources>